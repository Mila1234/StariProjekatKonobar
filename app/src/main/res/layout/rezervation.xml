<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/rezervation_color_background"
    android:padding="@dimen/padding_margin">

    <TextView android:id = "@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="15.5.2016 8:53"
        android:layout_marginBottom="16dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
      />


    <View
        android:id="@+id/divider1"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:layout_below="@id/time"
        android:layout_marginBottom="16dp"

        android:background="@color/white" />

    <TextView android:id = "@+id/numberTable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="broj stola 4"
        android:layout_below="@id/divider1"

        android:layout_above="@+id/remove"
        android:layout_alignParentStart="false" />

    <TextView android:id = "@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="cena 450 rsd"
        android:layout_below="@+id/numberTable"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/itemsOrder" />



    <TextView android:id = "@+id/paidOrNot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="placeno"
        android:layout_below="@+id/remove"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <Button  android:id="@+id/edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/edit"
        android:background="@drawable/shape_of_button"
        android:textColor="@color/white"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/divider1"
        android:layout_alignLeft="@+id/remove"
        android:layout_alignStart="@+id/remove" />

    <Button  android:id="@+id/remove"
        android:layout_marginLeft="@dimen/activity_small_padding"
        android:layout_marginRight="@dimen/activity_small_padding"
        android:layout_marginTop="@dimen/standard_margin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/remove"
        android:background="@drawable/shape_of_button"
        android:textColor="@color/white"


        android:layout_marginEnd="60dp"
        android:layout_below="@+id/edit"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        style="@style/Widget.AppCompat.Button.Colored" />
    <View
        android:id="@+id/divider2"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/white"
        android:layout_below="@+id/paidOrNot"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView android:id = "@+id/itemsOrder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="bla 1, bla 2, bla 3"
        android:layout_below="@+id/divider2"
        android:layout_marginTop="16dp"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/time" />




</RelativeLayout>
